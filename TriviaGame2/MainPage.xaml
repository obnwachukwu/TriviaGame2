<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaGame2.MainPage"
             BackgroundColor="Black">
    
    <Grid>
        <!-- Define Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- For Settings Button -->
            <RowDefinition Height="*" />
            <!-- For Main Content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Settings Button at Top Right -->
        <Button 
            Text="Settings"
            Clicked="OnSettingsButtonClicked"
            BackgroundColor="Gray"
            TextColor="White"
            WidthRequest="100"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,10,10,0" />

        <Button 
            Text="History"
            Clicked="OnSettingsButtonClicked"
            BackgroundColor="Gray"
            TextColor="White"
            WidthRequest="100"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,10,130,0"/>

        


        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="10" HorizontalOptions="Center">
                <!-- Logo Image -->
                <Image Source="trivia.png" WidthRequest="250" HeightRequest="125" HorizontalOptions="Center" x:Name="logo" />

                <!-- New Button to Choose Number of Questions -->
                <Button Text="Choose Number of Questions" x:Name="chooseNumQuestionsButton" Clicked="OnChooseNumQuestionsClicked" Padding="10" WidthRequest="250" CornerRadius="8" HorizontalOptions="Center" BackgroundColor="Violet" TextColor="White" />

                <!-- Start Game Button -->
                <Button Text="Click to Begin" x:Name="startButton" Clicked="OnStartGameClicked" Padding="10" WidthRequest="250" CornerRadius="8" HorizontalOptions="Center" BackgroundColor="Violet" TextColor="White" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
