<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaGame2.Settings"
             Title="Settings">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center" VerticalOptions="Center">

            <!-- Header -->
            <Label 
                Text="Settings"
                FontSize="30"
                FontAttributes="Bold"
                HorizontalOptions="Center" 
                Margin="0,0,0,20"/>

            <!-- Theme Settings Section -->
            <StackLayout Spacing="10">
                <Label Text="Theme Settings" FontAttributes="Bold" HorizontalOptions="Center" />
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Select Theme:" VerticalOptions="Center"/>
                    <Picker x:Name="themePicker" WidthRequest="150">
                        <Picker.Items>
                            <x:String>Light</x:String>
                            <x:String>Dark</x:String>
                        </Picker.Items>
                    </Picker>
                </HorizontalStackLayout>
            </StackLayout>

            <!-- Timer Settings Section -->
            <StackLayout Spacing="10">
                <Label Text="Timer Settings" FontAttributes="Bold" HorizontalOptions="Center" />
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Game Timer (seconds):" VerticalOptions="Center"/>
                    <Slider x:Name="timerSlider" Minimum="10" Maximum="300" Value="60" WidthRequest="200"/>
                </HorizontalStackLayout>
                <Label x:Name="timerLabel" Text="Timer: 60" HorizontalOptions="Center"/>
            </StackLayout>

            <!-- Audio Section -->
            <StackLayout Spacing="10">
                <Label Text="Audio Settings" FontAttributes="Bold" HorizontalOptions="Center" />
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Music Volume:" VerticalOptions="Center"/>
                    <Slider Minimum="0" Maximum="100" Value="50" WidthRequest="200"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Sound Effects:" VerticalOptions="Center"/>
                    <Switch IsToggled="True" />
                </HorizontalStackLayout>
            </StackLayout>

            <!-- Graphics Section -->
            <StackLayout Spacing="10">
                <Label Text="Graphics Settings" FontAttributes="Bold" HorizontalOptions="Center" />
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Resolution:" VerticalOptions="Center"/>
                    <Picker WidthRequest="150">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>1920x1080</x:String>
                                <x:String>1280x720</x:String>
                                <x:String>800x600</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Fullscreen:" VerticalOptions="Center"/>
                    <Switch IsToggled="False" />
                </HorizontalStackLayout>
            </StackLayout>

            <!-- Controls Section -->
            <StackLayout Spacing="10">
                <Label Text="Control Settings" FontAttributes="Bold" HorizontalOptions="Center" />
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Mouse Sensitivity:" VerticalOptions="Center"/>
                    <Slider Minimum="0" Maximum="10" Value="5" WidthRequest="200"/>
                </HorizontalStackLayout>
            </StackLayout>

            <!-- Back Button -->
            <Button 
                Text="Back"
                BackgroundColor="Gray"
                TextColor="White"
                HorizontalOptions="Center"
                WidthRequest="150"
                Command="{Binding NavigateBackCommand}" 
                Margin="20,20,20,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
